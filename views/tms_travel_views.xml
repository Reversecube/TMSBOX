<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Travel Form View -->
        <record id="view_tms_travel_form" model="ir.ui.view">
            <field name="name">tms.travel.form</field>
            <field name="model">tms.travel</field>
            <field name="arch" type="xml">
                <form string="Travel">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_start" string="Start Travel" type="object" 
                                class="oe_highlight" invisible="state != 'confirmed'"/>
                        <button name="action_complete" string="Complete" type="object" 
                                class="oe_highlight" invisible="state != 'in_progress'"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="state in ['completed', 'cancelled']"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                                invisible="state != 'cancelled'"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,confirmed,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_tms_waybill)d" type="action" 
                                    class="oe_stat_button" icon="fa-file-text-o"
                                    context="{'default_travel_id': active_id}">
                                <field name="waybill_ids" widget="statinfo" string="Waybills"/>
                            </button>
                            <button name="%(action_tms_expense)d" type="action" 
                                    class="oe_stat_button" icon="fa-money"
                                    context="{'default_travel_id': active_id}">
                                <field name="expense_ids" widget="statinfo" string="Expenses"/>
                            </button>
                            <button name="%(action_tms_advance)d" type="action" 
                                    class="oe_stat_button" icon="fa-dollar"
                                    context="{'default_travel_id': active_id}">
                                <field name="advance_ids" widget="statinfo" string="Advances"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="main_info">
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="driver_id" options="{'no_create': True}"/>
                                <field name="vehicle_id" options="{'no_create': True}"/>
                                <field name="route_id" options="{'no_create': True}"/>
                            </group>
                            <group name="odometer_info">
                                <field name="odometer_start"/>
                                <field name="odometer_end"/>
                                <field name="distance" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group name="financial_summary" string="Financial Summary">
                                <field name="total_revenue" widget="monetary"/>
                                <field name="total_expenses" widget="monetary"/>
                                <field name="total_advances" widget="monetary"/>
                                <field name="profit" widget="monetary" 
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Travel notes and observations..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Travel Tree View -->
        <record id="view_tms_travel_tree" model="ir.ui.view">
            <field name="name">tms.travel.tree</field>
            <field name="model">tms.travel</field>
            <field name="arch" type="xml">
                <tree string="Travels" decoration-info="state == 'draft'" 
                      decoration-warning="state == 'confirmed'" 
                      decoration-success="state == 'completed'"
                      decoration-muted="state == 'cancelled'">
                    <field name="name" decoration-bf="1"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="distance"/>
                    <field name="total_revenue" sum="Total Revenue" widget="monetary"/>
                    <field name="total_expenses" sum="Total Expenses" widget="monetary"/>
                    <field name="profit" sum="Total Profit" widget="monetary"/>
                    <field name="state" widget="badge" 
                           decoration-info="state == 'draft'"
                           decoration-warning="state == 'confirmed'"
                           decoration-primary="state == 'in_progress'"
                           decoration-success="state == 'completed'"
                           decoration-danger="state == 'cancelled'"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="company_id" column_invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Travel Search View -->
        <record id="view_tms_travel_search" model="ir.ui.view">
            <field name="name">tms.travel.search</field>
            <field name="model">tms.travel</field>
            <field name="arch" type="xml">
                <search string="Search Travels">
                    <field name="name" string="Travel Number"/>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="route_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <separator/>
                    <filter string="This Month" name="this_month" domain="[('date_start', '&gt;=', time.strftime('%Y-%m-01'))]"/>
                    <filter string="This Year" name="this_year" domain="[('date_start', '&gt;=', time.strftime('%Y-01-01'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}"/>
                        <filter string="Vehicle" name="group_vehicle" context="{'group_by': 'vehicle_id'}"/>
                        <filter string="Route" name="group_route" context="{'group_by': 'route_id'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Start Date" name="group_date_start" context="{'group_by': 'date_start'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Travel Kanban View -->
        <record id="view_tms_travel_kanban" model="ir.ui.view">
            <field name="name">tms.travel.kanban</field>
            <field name="model">tms.travel</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state">
                    <field name="name"/>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="distance"/>
                    <field name="profit"/>
                    <field name="state"/>
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="float-end badge rounded-pill" 
                                          t-attf-class="badge-{{state == 'draft' ? 'secondary' : state == 'confirmed' ? 'warning' : state == 'in_progress' ? 'primary' : state == 'completed' ? 'success' : 'danger'}}">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="driver_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-truck"/> <field name="vehicle_id"/>
                                    </div>
                                    <div t-if="record.distance.raw_value">
                                        <i class="fa fa-road"/> <field name="distance"/> km
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        Profit: <field name="profit" widget="monetary"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="date_start"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Travel Action -->
        <record id="action_tms_travel" model="ir.actions.act_window">
            <field name="name">Travels</field>
            <field name="res_model">tms.travel</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Travel
                </p>
                <p>
                    Travels are used to track complete journeys including multiple waybills and expenses.
                </p>
            </field>
        </record>

    </data>
</odoo>
