<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_tms_route_form" model="ir.ui.view">
            <field name="name">tms.route.form</field>
            <field name="model">tms.route</field>
            <field name="arch" type="xml">
                <form string="Route">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Route Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="origin"/>
                                <field name="destination"/>
                            </group>
                            <group>
                                <field name="distance"/>
                                <field name="estimated_duration"/>
                                <field name="active"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Waypoints">
                                <field name="waypoint_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="distance_from_origin"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes" placeholder="Route information..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tms_route_tree" model="ir.ui.view">
            <field name="name">tms.route.tree</field>
            <field name="model">tms.route</field>
            <field name="arch" type="xml">
                <tree string="Routes">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="origin"/>
                    <field name="destination"/>
                    <field name="distance"/>
                    <field name="estimated_duration"/>
                </tree>
            </field>
        </record>

        <record id="view_tms_route_search" model="ir.ui.view">
            <field name="name">tms.route.search</field>
            <field name="model">tms.route</field>
            <field name="arch" type="xml">
                <search string="Search Routes">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="origin"/>
                    <field name="destination"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Origin" name="group_origin" context="{'group_by': 'origin'}"/>
                        <filter string="Destination" name="group_destination" context="{'group_by': 'destination'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_tms_route" model="ir.actions.act_window">
            <field name="name">Routes</field>
            <field name="res_model">tms.route</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Route
                </p>
                <p>
                    Define routes with origin, destination and waypoints.
                </p>
            </field>
        </record>

    </data>
</odoo>