<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_tms_unit_form" model="ir.ui.view">
            <field name="name">tms.unit.form</field>
            <field name="model">tms.unit</field>
            <field name="arch" type="xml">
                <form string="Transport Unit">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="available,in_use,maintenance"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Unit Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="unit_type"/>
                                <field name="vehicle_id"/>
                                <field name="license_plate"/>
                            </group>
                            <group>
                                <field name="capacity_weight"/>
                                <field name="capacity_volume"/>
                                <field name="active"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Unit information..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tms_unit_tree" model="ir.ui.view">
            <field name="name">tms.unit.tree</field>
            <field name="model">tms.unit</field>
            <field name="arch" type="xml">
                <tree string="Transport Units">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="unit_type"/>
                    <field name="license_plate"/>
                    <field name="capacity_weight"/>
                    <field name="capacity_volume"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_tms_unit_search" model="ir.ui.view">
            <field name="name">tms.unit.search</field>
            <field name="model">tms.unit</field>
            <field name="arch" type="xml">
                <search string="Search Transport Units">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="license_plate"/>
                    <separator/>
                    <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                    <filter string="In Use" name="in_use" domain="[('state', '=', 'in_use')]"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_type" context="{'group_by': 'unit_type'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_tms_unit" model="ir.actions.act_window">
            <field name="name">Transport Units</field>
            <field name="res_model">tms.unit</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Transport Unit
                </p>
                <p>
                    Manage your trucks, trailers and transport units.
                </p>
            </field>
        </record>

    </data>
</odoo>