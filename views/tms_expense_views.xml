<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Expense Form View -->
        <record id="view_tms_expense_form" model="ir.ui.view">
            <field name="name">tms.expense.form</field>
            <field name="model">tms.expense</field>
            <field name="arch" type="xml">
                <form string="Expense">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,paid"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="expense_type"/>
                                <field name="amount" widget="monetary"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="travel_id"/>
                                <field name="waybill_id"/>
                                <field name="driver_id"/>
                                <field name="vehicle_id"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Expense details..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Expense Tree View -->
        <record id="view_tms_expense_tree" model="ir.ui.view">
            <field name="name">tms.expense.tree</field>
            <field name="model">tms.expense</field>
            <field name="arch" type="xml">
                <tree string="Expenses">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="expense_type"/>
                    <field name="amount" widget="monetary"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Expense Action -->
        <record id="action_tms_expense" model="ir.actions.act_window">
            <field name="name">Expenses</field>
            <field name="res_model">tms.expense</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Expense
                </p>
            </field>
        </record>

    </data>
</odoo>